{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CTA Admin",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "./dist",
    "devUrl": "http://127.0.0.1:1350",
    "beforeDevCommand": "trunk serve",
    "beforeBuildCommand": "trunk build --release"
  },
  "app": {
    "windows": [
      {
        "title": "CTA Admin",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}